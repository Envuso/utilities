{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 14",
  "compilerOptions": {
    "lib": [
      "ESNext"
    ],
    "module": "commonjs",
    "target": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "esModuleInterop": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": "./src",
    "baseUrl": "./src",
    "strict": false,
    "sourceMap": true,
    "declaration": true,
    "types": [
      "node",
    ],
    "typeRoots": [
      "node_modules/@types",
      "src/**"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "./dist"
  ],
  "include": [
    "src/**/*",
  ]
}
